[user]
  name = Rados≈Çaw Grochowski
[core]
  editor = nvim
  excludesFile = ~/.gitignore
[diff]
	tool = vimdiff
	colorMoved = zebra
[merge]
	tool = vimdiff
[mergetool "vimdiff"]
	path = nvim
[url "git@github.com:"]
	insteadOf = https://github.com/
[push]
	default = current
	autoSetupRemote = true
[fetch]
  prune = true
[include]
  path = ~/.gitconfig.local
[advice]
  macheteEditorSelection = false
[alias]
  fomo = !git fetch origin master && git rebase origin/master
  fopo = !git fetch origin master && git pull origin master --no-rebase
  shove = !git push --force-with-lease --force-if-includes
