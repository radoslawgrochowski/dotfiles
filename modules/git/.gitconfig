[user]
  name = Rados≈Çaw Grochowski
[core]
  autocrlf = input 
  editor = vi
  excludesFile = ~/.gitignore
[diff]
	tool = vimdiff
	colorMoved = zebra
[merge]
	tool = vimdiff
[mergetool "vimdiff"]
	path = nvim
[url "git@github.com:"]
	insteadOf = https://github.com/
[push]
	default = current
	autoSetupRemote = true
[fetch]
  prune = true
[include]
  path = ~/.gitconfig.local
[rerere]
  enabled = true
[advice]
  macheteEditorSelection = false
[alias]
  fomo = !git fetch origin master && git rebase origin/master
  fopo = !git fetch origin master && git pull origin master --no-rebase
  shove = !git commit --no-edit --amend && git push --force-with-lease --force-if-includes
  m = !git machete
	clone-for-worktrees = "!clone-for-worktrees"

