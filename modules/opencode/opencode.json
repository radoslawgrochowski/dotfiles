{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "theme": "tokyonight",
  "share": "disabled",
  "keybinds": {
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  },
  "provider": {
    "google-vertex": {
      "models": {
        "gemini-2.5-flash": {},
        "gemini-2.5-pro": {}
      },
      "options": {
        "project": "{env:GOOGLE_CLOUD_PROJECT}",
        "location": "{env:GOOGLE_CLOUD_LOCATION}"
      }
    }
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
        "docker",
        "container",
        "run",
        "-i",
        "--rm",
        "--init",
        "--add-host=host.docker.internal:host-gateway",
        "mcr.microsoft.com/playwright/mcp"
      ],
      "enabled": true
    }
  },
  "permission": {
    "webfetch": "allow",
    "bash": {
      "cat *": "allow",
      "cd *": "allow",
      "find *": "allow",
      "git diff": "allow",
      "git status": "allow",
      "grep *": "allow",
      "head *": "allow",
      "ls *": "allow",
      "pwd": "allow",
      "rg *": "allow",
      "tail *": "allow",
      "wc *": "allow"
    }
  }
}
