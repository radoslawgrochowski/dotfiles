set $LEFT_MONITOR HDMI-1 HDMI-0 DP-1-2
set $CENTER_MONITOR eDP-1 

workspace $ws1 output $LEFT_MONITOR $RIGHT_MONITOR $CENTER_MONITOR
workspace $ws2 output $LEFT_MONITOR $RIGHT_MONITOR $CENTER_MONITOR
workspace $ws3 output $LEFT_MONITOR $RIGHT_MONITOR $CENTER_MONITOR
workspace $ws4 output $LEFT_MONITOR $RIGHT_MONITOR $CENTER_MONITOR
workspace $ws5 output $CENTER_MONITOR $LEFT_MONITOR $RIGHT_MONITOR 
workspace $ws6 output $CENTER_MONITOR $RIGHT_MONITOR $LEFT_MONITOR
workspace $ws7 output $RIGHT_MONITOR $CENTER_MONITOR $LEFT_MONITOR  
workspace $ws8 output $RIGHT_MONITOR $CENTER_MONITOR $LEFT_MONITOR  
workspace $ws9 output $RIGHT_MONITOR $CENTER_MONITOR $LEFT_MONITOR  
workspace $ws10 output $RIGHT_MONITOR $CENTER_MONITOR $LEFT_MONITOR  

bindsym $mod+Tab workspace next


exec_always --no-startup-id sh $HOME/.config/polybar/launch.sh
exec_always --no-startup-id autorandr -c 
exec --no-startup-id sh $HOME/scripts/autostart.sh

